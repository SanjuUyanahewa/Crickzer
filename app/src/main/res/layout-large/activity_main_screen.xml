<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scn21"
    tools:context="com.crickzer.app.crickzer.MainScreen">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="191dp"
        android:layout_marginStart="191dp"
        android:layout_marginTop="55dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/scn24" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/scn25" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="55dp"
        android:scrollbarThumbVertical="@drawable/scn26" />

    <ListView
        android:id="@+id/listView2"
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/listView1"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:scrollbarThumbVertical="@drawable/scn27" />
</RelativeLayout>
