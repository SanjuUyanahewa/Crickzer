<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crickzer.app.crickzer.PredictOverScreen">

<TextView
android:id="@+id/displayOvers"
android:layout_width="400dp"
android:layout_height="250dp"
android:text="Predictions"
    android:textAlignment="center"
    android:textSize="25dp"
    />

<Button
android:id="@+id/refreshOvers"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="35dp"
android:layout_marginStart="35dp"
android:text="Refresh"
android:layout_below="@+id/displayOvers"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
android:layout_marginTop="63dp" />

<Button
android:id="@+id/confirmOvers"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignBottom="@+id/refreshOvers"
android:layout_alignParentEnd="true"
android:layout_alignParentRight="true"
android:layout_marginEnd="58dp"
android:layout_marginRight="58dp"
android:text="Confirm" />

</RelativeLayout>